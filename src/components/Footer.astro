---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-twitter', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-discord', url: '#' },
  { icon: 'fab fa-github', url: '#' }
];
---

<footer class="bg-black border-t-2 border-cyan-400 py-8 relative overflow-hidden">
  <!-- Glitch effect background elements -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-0 left-0 w-full h-1 bg-purple-500 animate-pulse"></div>
    <div class="absolute top-4 left-0 w-1 h-full bg-cyan-400 animate-pulse"></div>
    <div class="absolute top-0 right-0 w-1 h-full bg-purple-500 animate-pulse"></div>
  </div>
  
  <div class="container mx-auto px-4 text-center relative z-10">
    <p class="text-cyan-400 text-lg font-bold tracking-wider">
      &copy; {currentYear} <span class="text-purple-500">Cosmic Teddy Catastrophe</span>. All rights reserved.
    </p>
    
    <div class="flex justify-center gap-6 mt-6">
      {socialLinks.map((link) => (
        <a 
          href={link.url} 
          class="text-cyan-400 hover:text-purple-500 transition-all duration-300 transform hover:scale-110"
          aria-label={`Visit our ${link.icon.split('-')[2]} page`}
        >
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
    
    <!-- Neon glow effect -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-0 left-0 w-full h-1 bg-purple-500 shadow-[0_0_10px_2px_rgba(138,43,226,0.7)]"></div>
      <div class="absolute bottom-0 left-0 w-full h-1 bg-cyan-400 shadow-[0_0_10px_2px_rgba(0,255,255,0.7)]"></div>
    </div>
  </div>
</footer>